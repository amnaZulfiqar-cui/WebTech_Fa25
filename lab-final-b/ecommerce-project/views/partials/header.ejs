<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'E-Commerce Store' %> - MyShop</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Additional meta tags -->
    <meta
      name="description"
      content="<%= title || 'Online shopping for electronics, clothing, books and more' %>"
    />
    <meta
      name="keywords"
      content="ecommerce, shopping, online store, buy online"
    />
    <meta name="author" content="MyShop" />

    <!-- Open Graph tags for social media -->
    <meta
      property="og:title"
      content="<%= title || 'MyShop - Online Store' %>"
    />
    <meta property="og:description" content="Shop the best products online" />
    <meta property="og:image" content="/images/logo.png" />
    <meta property="og:url" content="<%= currentPath || '/' %>" />
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav
      class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top"
    >
      <div class="container">
        <!-- Brand Logo -->
        <a class="navbar-brand fw-bold" href="/">
          <i class="bi bi-shop me-2"></i>
          MyShop
        </a>

        <!-- Mobile Toggle Button -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarMain"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Main Navigation -->
        <div class="collapse navbar-collapse" id="navbarMain">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath === '/' || currentPath === '/products' ? 'active' : '' %>"
                href="/"
              >
                <i class="bi bi-house-door me-1"></i>
                Home
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath && currentPath.startsWith('/products') ? 'active' : '' %>"
                href="/products"
              >
                <i class="bi bi-grid me-1"></i>
                Products
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath && currentPath.startsWith('/categories') ? 'active' : '' %>"
                href="/categories/Electronics"
              >
                <i class="bi bi-laptop me-1"></i>
                Categories
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath && currentPath.startsWith('/order/my-orders') ? 'active' : '' %>"
                href="/order/my-orders"
              >
                <i class="bi bi-receipt me-1"></i>
                My Orders
              </a>
            </li>
          </ul>

          <!-- Right Side Navigation -->
          <ul class="navbar-nav">
            <!-- Cart -->
            <li class="nav-item">
              <a
                class="nav-link position-relative <%= currentPath && currentPath.startsWith('/cart') ? 'active' : '' %>"
                href="/cart"
              >
                <i class="bi bi-cart3 me-1"></i>
                Cart <% if (cartCount && cartCount > 0) { %>
                <span
                  class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                >
                  <%= cartCount %>
                  <span class="visually-hidden">items in cart</span>
                </span>
                <% } %>
              </a>
            </li>

            <!-- Admin Link (visible only in development) -->
            <% if (process.env.NODE_ENV === 'development') { %>
            <li class="nav-item">
              <a
                class="nav-link <%= currentPath && currentPath.startsWith('/admin') ? 'active' : '' %>"
                href="/admin"
              >
                <i class="bi bi-speedometer2 me-1"></i>
                Admin
              </a>
            </li>
            <% } %>

            <!-- User Dropdown (placeholder for auth) -->
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                <i class="bi bi-person-circle me-1"></i>
                Account
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <a class="dropdown-item" href="/order/my-orders">
                    <i class="bi bi-receipt me-2"></i>My Orders
                  </a>
                </li>
                <li>
                  <a class="dropdown-item" href="#">
                    <i class="bi bi-heart me-2"></i>Wishlist
                  </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="#">
                    <i class="bi bi-box-arrow-right me-2"></i>Sign In
                  </a>
                </li>
                <li>
                  <a class="dropdown-item" href="#">
                    <i class="bi bi-person-plus me-2"></i>Register
                  </a>
                </li>
              </ul>
            </li>
          </ul>

          <!-- Search Form -->
          <form class="d-flex ms-lg-3" action="/products" method="GET">
            <div class="input-group">
              <input
                type="search"
                class="form-control"
                placeholder="Search products..."
                name="search"
                value="<%= currentSearch || '' %>"
              />
              <button class="btn btn-outline-light" type="submit">
                <i class="bi bi-search"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if (session && session.flash) { %>
    <div class="container mt-5 pt-5">
      <% for (const type in session.flash) { %> <%
      session.flash[type].forEach(message => { %>
      <div
        class="alert alert-<%= type === 'error' ? 'danger' : type %> alert-dismissible fade show"
        role="alert"
      >
        <%= message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% }) %> <% } %>
    </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-5 pt-4"></main>
  </body>
</html>
